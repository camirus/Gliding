<c3p0-config>
    <default-config>
        <property name="initialPoolSize">2</property>
        <property name="minPoolSize">2</property>
        <property name="maxPoolSize">20</property>
        <property name="checkoutTimeout">1800</property>
        <property name="maxStatementsPerConnection">0</property>
        
        <property name="com.mchange.v2.c3p0.management.ManagementCoordinator">com.mchange.v2.c3p0.management.NullManagementCoordinator</property>
        
        <property name="preferredTestQuery">SELECT 1</property>
        <property name="testConnectionOnCheckin">true</property>
        <property name="testConnectionOnCheckout">false</property>
        <property name="idleConnectionTestPeriod">300</property> <!-- 5 minutes -->
    </default-config>
</c3p0-config>